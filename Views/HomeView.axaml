<UserControl
    x:Class="PandaLdr.Views.HomeView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:PandaLdr.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:HomeViewModel"
    mc:Ignorable="d">
    <UserControl.Styles>
        <Style Selector="Button.LaunchHover:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#E59E5C" />
            <Setter Property="Foreground" Value="#000" />
        </Style>
    </UserControl.Styles>
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="PANDA Loader" />
                <Button
                    Grid.Column="1"
                    Width="200"
                    Height="60"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="#f8aa62"
                    Classes="LaunchHover"
                    Click="LaunchGame"
                    Content="Launch"
                    CornerRadius="0"
                    Foreground="#000" />
            </Grid>
            <Border Margin="20,0" ClipToBounds="True">
                <Image
                    Height="180"
                    Source="avares://PandaLdr/Assets/home-banner.png"
                    Stretch="UniformToFill" />
            </Border>
            <TabControl Margin="20">
                <TabItem Header="Statistics">
                    <Grid>
                        <!--  columns  -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  rows  -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Row 1  -->
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="5"
                            FontWeight="Bold"
                            Text="Installed Mods" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="5"
                            Text="{Binding InstalledModCount}" />
                        <Button
                            Grid.Row="1"
                            Grid.Column="2"
                            Content="Mod Manager" />

                        <!--  Row 2  -->
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="5"
                            FontWeight="Bold"
                            Text="Installed Maps" />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="5"
                            Text="{Binding InstalledMapCount}" />

                        <!--  Row 3  -->
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="5"
                            FontWeight="Bold"
                            Text="PANDA Version" />
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="5"
                            Text="{Binding PandaVersion}" />
                    </Grid>
                </TabItem>

                <TabItem Header="Launch Options">
                    <StackPanel Margin="10" Spacing="10">

                        <!--  Display Settings Section  -->
                        <Expander
                            HorizontalAlignment="Stretch"
                            Header="Display Settings"
                            IsExpanded="True">
                            <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto, Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Full Screen" />
                                <CheckBox
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    IsChecked="{Binding FullScreen}" />

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Resolution" />
                                <ComboBox
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    SelectedIndex="{Binding Resolution}">
                                    <ComboBoxItem Content="800x600" />
                                    <ComboBoxItem Content="1024x768" />
                                    <ComboBoxItem Content="1280x1024" />
                                    <ComboBoxItem Content="1600x1200" />
                                    <ComboBoxItem Content="1920x1080" />
                                    <ComboBoxItem Content="2560x1440" />
                                    <ComboBoxItem Content="3840x2160" />
                                </ComboBox>

                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Update Rate" />
                                <ComboBox
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    SelectedIndex="{Binding UpdateRate}">
                                    <ComboBoxItem Content="60" />
                                    <ComboBoxItem Content="30" />
                                    <ComboBoxItem Content="20" />
                                    <ComboBoxItem Content="15" />
                                </ComboBox>

                                <TextBlock
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Draw Rate" />
                                <ComboBox
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    SelectedIndex="{Binding DrawRate}">
                                    <ComboBoxItem Content="60" />
                                    <ComboBoxItem Content="30" />
                                    <ComboBoxItem Content="20" />
                                    <ComboBoxItem Content="15" />
                                </ComboBox>
                            </Grid>
                        </Expander>

                        <!--  User Settings Section  -->
                        <Expander
                            HorizontalAlignment="Stretch"
                            Header="User Settings"
                            IsExpanded="False">
                            <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Last File" />
                                <TextBox
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding LastFile}" />

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Unlock Entity0" />
                                <TextBox
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding UnlockEntity0}" />

                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Unlock Count" />
                                <TextBox
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding UnlockCount}" />

                                <TextBlock
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Unlock Entity1" />
                                <TextBox
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding UnlockEntity1}" />

                                <TextBlock
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Unlock Entity2" />
                                <TextBox
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding UnlockEntity2}" />

                                <TextBlock
                                    Grid.Row="5"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Show User Entity Warning" />
                                <CheckBox
                                    Grid.Row="5"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    IsChecked="{Binding ShowUserEntityWarning}" />
                            </Grid>
                        </Expander>

                        <!--  Advanced Settings Section  -->
                        <Expander
                            HorizontalAlignment="Stretch"
                            Header="Advanced Settings"
                            IsExpanded="False">
                            <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Drag" />
                                <TextBox
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding Drag}" />

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Click" />
                                <TextBox
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding Click}" />

                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Normal" />
                                <TextBox
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding Normal}" />

                                <TextBlock
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Level" />
                                <TextBox
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding Level}" />

                                <TextBlock
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Load Half Animations" />
                                <CheckBox
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    IsChecked="{Binding LoadHalfAnimations}" />

                                <TextBlock
                                    Grid.Row="5"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Use 8 Bit Sound" />
                                <CheckBox
                                    Grid.Row="5"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    IsChecked="{Binding Use8BitSound}" />

                                <TextBlock
                                    Grid.Row="6"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Developer Mode Enabled" />
                                <CheckBox
                                    Grid.Row="6"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    IsChecked="{Binding DeveloperModeEnabled}" />
                            </Grid>
                        </Expander>

                        <!--  Map Settings Section  -->
                        <Expander
                            HorizontalAlignment="Stretch"
                            Header="Map Settings"
                            IsExpanded="False">
                            <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Map X" />
                                <TextBox
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding MapX}" />

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Map Y" />
                                <TextBox
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding MapY}" />
                            </Grid>
                        </Expander>

                        <!--  Language Settings  -->
                        <Expander
                            HorizontalAlignment="Stretch"
                            Header="Language Settings"
                            IsExpanded="False">
                            <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Lang" />
                                <TextBox
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding Lang}" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Sublang" />
                                <TextBox
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding Sublang}" />
                            </Grid>
                        </Expander>

                        <!--  Dependency Settings  -->
                        <Expander
                            HorizontalAlignment="Stretch"
                            Header="Dependency Settings"
                            IsExpanded="False">
                            <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Res" />
                                <TextBox
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding Res}" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Lang" />
                                <TextBox
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding Lang}" />
                            </Grid>
                        </Expander>

                        <!--  Resource Settings  -->
                        <Expander
                            HorizontalAlignment="Stretch"
                            Header="Resource Settings"
                            IsExpanded="False">
                            <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Path" />
                                <TextBox
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding Path}" />
                            </Grid>
                        </Expander>

                        <!--  Manager Settings  -->
                        <Expander
                            HorizontalAlignment="Stretch"
                            Header="Manager Settings"
                            IsExpanded="False">
                            <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="AIMgr" />
                                <TextBox
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding Aimgr}" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="WorldMgr" />
                                <TextBox
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding Worldmgr}" />
                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="GameMgr" />
                                <TextBox
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding Gamemgr}" />
                                <TextBlock
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="ScenarioMgr" />
                                <TextBox
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding Scenariomgr}" />
                                <TextBlock
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="ScriptMgr" />
                                <TextBox
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding Scriptmgr}" />
                                <TextBlock
                                    Grid.Row="5"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="SoundMgr" />
                                <TextBox
                                    Grid.Row="5"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding Soundmgr}" />
                                <TextBlock
                                    Grid.Row="6"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="TerrainMgr" />
                                <TextBox
                                    Grid.Row="6"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding Terrainmgr}" />
                            </Grid>
                        </Expander>

                        <!--  UI Settings Section  -->
                        <Expander
                            HorizontalAlignment="Stretch"
                            Header="UI Settings"
                            IsExpanded="False">
                            <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Use Alternate Cursors" />
                                <CheckBox
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    IsChecked="{Binding UseAlternateCursors}" />

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Tooltip Delay" />
                                <TextBox
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding TooltipDelay}" />

                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Tooltip Duration" />
                                <TextBox
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding TooltipDuration}" />

                                <TextBlock
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Message Display" />
                                <TextBox
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding MessageDisplay}" />

                                <TextBlock
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Mouse Scroll Threshold" />
                                <TextBox
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding MouseScrollThreshold}" />

                                <TextBlock
                                    Grid.Row="5"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Mouse Scroll Delay" />
                                <TextBox
                                    Grid.Row="5"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding MouseScrollDelay}" />

                                <TextBlock
                                    Grid.Row="6"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Mouse Scroll X" />
                                <TextBox
                                    Grid.Row="6"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding MouseScrollX}" />

                                <TextBlock
                                    Grid.Row="7"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Mouse Scroll Y" />
                                <TextBox
                                    Grid.Row="7"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding MouseScrollY}" />

                                <TextBlock
                                    Grid.Row="8"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Key Scroll X" />
                                <TextBox
                                    Grid.Row="8"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding KeyScrollX}" />

                                <TextBlock
                                    Grid.Row="9"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Key Scroll Y" />
                                <TextBox
                                    Grid.Row="9"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding KeyScrollY}" />

                                <TextBlock
                                    Grid.Row="10"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Minimum Message Interval" />
                                <TextBox
                                    Grid.Row="10"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding MinimumMessageInterval}" />

                                <TextBlock
                                    Grid.Row="11"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Default Edit Char Limit" />
                                <TextBox
                                    Grid.Row="11"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding DefaultEditCharLimit}" />

                                <TextBlock
                                    Grid.Row="12"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="No Menu Music" />
                                <CheckBox
                                    Grid.Row="12"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    IsChecked="{Binding NoMenuMusic}" />

                                <TextBlock
                                    Grid.Row="13"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Menu Music" />
                                <TextBox
                                    Grid.Row="13"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding MenuMusic}" />

                                <TextBlock
                                    Grid.Row="14"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Help Type" />
                                <TextBox
                                    Grid.Row="14"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding HelpType}" />

                                <TextBlock
                                    Grid.Row="15"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Play Movie" />
                                <CheckBox
                                    Grid.Row="15"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    IsChecked="{Binding PlayMovie}" />

                                <TextBlock
                                    Grid.Row="16"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Movie Volume 1" />
                                <TextBox
                                    Grid.Row="16"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding MovieVolume1}" />

                                <TextBlock
                                    Grid.Row="17"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Play Second Movie" />
                                <CheckBox
                                    Grid.Row="17"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    IsChecked="{Binding PlaySecondMovie}" />

                                <TextBlock
                                    Grid.Row="18"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Movie Volume 2" />
                                <TextBox
                                    Grid.Row="18"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding MovieVolume2}" />

                                <TextBlock
                                    Grid.Row="19"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Max Short Tooltip Width" />
                                <TextBox
                                    Grid.Row="19"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding MaxShortTooltipWidth}" />

                                <TextBlock
                                    Grid.Row="20"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Text="Max Long Tooltip Width" />
                                <TextBox
                                    Grid.Row="20"
                                    Grid.Column="1"
                                    Margin="0,5,0,5"
                                    Text="{Binding MaxLongTooltipWidth}" />

                                <TextBlock
                                    Grid.Row="21"
