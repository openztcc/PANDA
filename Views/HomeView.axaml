<UserControl
    x:Class="PandaLdr.Views.HomeView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:PandaLdr.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:HomeViewModel"
    mc:Ignorable="d">
    <UserControl.Styles>
        <Style Selector="Button.LaunchHover:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#E59E5C" />
            <Setter Property="Foreground" Value="#000" />
        </Style>
    </UserControl.Styles>
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="PANDA Loader" />
                <Button
                    Grid.Column="1"
                    Width="200"
                    Height="60"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="#f8aa62"
                    Classes="LaunchHover"
                    Click="LaunchGame"
                    Content="Launch"
                    CornerRadius="0"
                    Foreground="#000" />
            </Grid>
            <Border Margin="20,0" ClipToBounds="True">
                <Image
                    Height="180"
                    Source="avares://PandaLdr/Assets/home-banner.png"
                    Stretch="UniformToFill" />
            </Border>
            <TabControl Margin="20">
                <TabItem Header="Statistics">
                    <Grid>
                        <!--  columns  -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  rows  -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Row 1  -->
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="5"
                            FontWeight="Bold"
                            Text="Installed Mods" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="5"
                            Text="{Binding InstalledModCount}" />
                        <Button
                            Grid.Row="1"
                            Grid.Column="2"
                            Content="Mod Manager" />

                        <!--  Row 2  -->
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="5"
                            FontWeight="Bold"
                            Text="Installed Maps" />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="5"
                            Text="{Binding InstalledMapCount}" />

                        <!--  Row 3  -->
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="5"
                            FontWeight="Bold"
                            Text="PANDA Version" />
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="5"
                            Text="{Binding PandaVersion}" />
                    </Grid>
                </TabItem>

                <TabItem Header="Launch Options">
                    <StackPanel Margin="10" Spacing="10">

                        <!--  Display Settings Section  -->
                        <Expander Header="Display Settings" IsExpanded="True">
                            <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto, Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    VerticalAlignment="Center"
                                    Text="Full Screen" />
                                <CheckBox Grid.Row="0" IsChecked="{Binding FullScreen}" />

                                <TextBlock
                                    Grid.Row="1"
                                    VerticalAlignment="Center"
                                    Text="Resolution" />
                                <ComboBox Grid.Row="1" SelectedIndex="{Binding Resolution}">
                                    <ComboBoxItem Content="1920x1080" />
                                    <ComboBoxItem Content="1280x720" />
                                </ComboBox>

                                <TextBlock
                                    Grid.Row="2"
                                    VerticalAlignment="Center"
                                    Text="Update Rate" />
                                <ComboBox Grid.Row="2" SelectedIndex="{Binding UpdateRate}">
                                    <ComboBoxItem Content="60" />
                                    <ComboBoxItem Content="30" />
                                    <ComboBoxItem Content="20" />
                                    <ComboBoxItem Content="15" />
                                </ComboBox>

                                <TextBlock
                                    Grid.Row="3"
                                    VerticalAlignment="Center"
                                    Text="Draw Rate" />
                                <ComboBox Grid.Row="3" SelectedIndex="{Binding DrawRate}">
                                    <ComboBoxItem Content="60" />
                                    <ComboBoxItem Content="30" />
                                    <ComboBoxItem Content="20" />
                                    <ComboBoxItem Content="15" />
                                </ComboBox>
                            </Grid>
                        </Expander>

                        <!--  User Settings Section  -->
                        <Expander Header="User Settings" IsExpanded="True">
                            <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    VerticalAlignment="Center"
                                    Text="Last File" />
                                <TextBox Grid.Row="0" Text="{Binding LastFile}" />

                                <TextBlock
                                    Grid.Row="1"
                                    VerticalAlignment="Center"
                                    Text="Unlock Entity0" />
                                <TextBox Grid.Row="1" Text="{Binding UnlockEntity0}" />

                                <TextBlock
                                    Grid.Row="2"
                                    VerticalAlignment="Center"
                                    Text="Unlock Count" />
                                <TextBox Grid.Row="2" Text="{Binding UnlockCount}" />

                                <TextBlock
                                    Grid.Row="3"
                                    VerticalAlignment="Center"
                                    Text="Unlock Entity1" />
                                <TextBox Grid.Row="3" Text="{Binding UnlockEntity1}" />

                                <TextBlock
                                    Grid.Row="4"
                                    VerticalAlignment="Center"
                                    Text="Unlock Entity2" />
                                <TextBox Grid.Row="4" Text="{Binding UnlockEntity2}" />

                                <TextBlock
                                    Grid.Row="5"
                                    VerticalAlignment="Center"
                                    Text="Show User Entity Warning" />
                                <CheckBox Grid.Row="5" IsChecked="{Binding ShowUserEntityWarning}" />
                            </Grid>
                        </Expander>

                        <!--  Advanced Settings Section  -->
                        <Expander Header="Advanced Settings" IsExpanded="False">
                            <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    VerticalAlignment="Center"
                                    Text="Drag" />
                                <TextBox Grid.Row="0" Text="{Binding Drag}" />

                                <TextBlock
                                    Grid.Row="1"
                                    VerticalAlignment="Center"
                                    Text="Click" />
                                <TextBox Grid.Row="1" Text="{Binding Click}" />

                                <TextBlock
                                    Grid.Row="2"
                                    VerticalAlignment="Center"
                                    Text="Normal" />
                                <TextBox Grid.Row="2" Text="{Binding Normal}" />

                                <TextBlock
                                    Grid.Row="3"
                                    VerticalAlignment="Center"
                                    Text="Level" />
                                <TextBox Grid.Row="3" Text="{Binding Level}" />

                                <TextBlock
                                    Grid.Row="4"
                                    VerticalAlignment="Center"
                                    Text="Load Half Animations" />
                                <CheckBox Grid.Row="4" IsChecked="{Binding LoadHalfAnimations}" />

                                <TextBlock
                                    Grid.Row="5"
                                    VerticalAlignment="Center"
                                    Text="Use 8 Bit Sound" />
                                <CheckBox Grid.Row="5" IsChecked="{Binding Use8BitSound}" />

                                <TextBlock
                                    Grid.Row="6"
                                    VerticalAlignment="Center"
                                    Text="Developer Mode Enabled" />
                                <CheckBox Grid.Row="6" IsChecked="{Binding DeveloperModeEnabled}" />
                            </Grid>
                        </Expander>

                        <!--  Map Settings Section  -->
                        <Expander Header="Map Settings" IsExpanded="False">
                            <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    VerticalAlignment="Center"
                                    Text="Map X" />
                                <TextBox Grid.Row="0" Text="{Binding MapX}" />

                                <TextBlock
                                    Grid.Row="1"
                                    VerticalAlignment="Center"
                                    Text="Map Y" />
                                <TextBox Grid.Row="1" Text="{Binding MapY}" />
                            </Grid>
                        </Expander>

                        <!--  UI Settings Section  -->
                        <Expander Header="UI Settings" IsExpanded="False">
                            <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    VerticalAlignment="Center"
                                    Text="Use Alternate Cursors" />
                                <CheckBox Grid.Row="0" IsChecked="{Binding UseAlternateCursors}" />

                                <TextBlock
                                    Grid.Row="1"
                                    VerticalAlignment="Center"
                                    Text="Tooltip Delay" />
                                <TextBox Grid.Row="1" Text="{Binding TooltipDelay}" />

                                <TextBlock
                                    Grid.Row="2"
                                    VerticalAlignment="Center"
                                    Text="Tooltip Duration" />
                                <TextBox Grid.Row="2" Text="{Binding TooltipDuration}" />

                                <TextBlock
                                    Grid.Row="3"
                                    VerticalAlignment="Center"
                                    Text="Message Display" />
                                <TextBox Grid.Row="3" Text="{Binding MessageDisplay}" />

                                <TextBlock
                                    Grid.Row="4"
                                    VerticalAlignment="Center"
                                    Text="Mouse Scroll Threshold" />
                                <TextBox Grid.Row="4" Text="{Binding MouseScrollThreshold}" />

                                <TextBlock
                                    Grid.Row="5"
                                    VerticalAlignment="Center"
                                    Text="Mouse Scroll Delay" />
                                <TextBox Grid.Row="5" Text="{Binding MouseScrollDelay}" />

                                <TextBlock
                                    Grid.Row="6"
                                    VerticalAlignment="Center"
                                    Text="Mouse Scroll X" />
                                <TextBox Grid.Row="6" Text="{Binding MouseScrollX}" />

                                <TextBlock
                                    Grid.Row="7"
                                    VerticalAlignment="Center"
                                    Text="Mouse Scroll Y" />
                                <TextBox Grid.Row="7" Text="{Binding MouseScrollY}" />

                                <TextBlock
                                    Grid.Row="8"
                                    VerticalAlignment="Center"
                                    Text="Key Scroll X" />
                                <TextBox Grid.Row="8" Text="{Binding KeyScrollX}" />

                                <TextBlock
                                    Grid.Row="9"
                                    VerticalAlignment="Center"
                                    Text="Key Scroll Y" />
                                <TextBox Grid.Row="9" Text="{Binding KeyScrollY}" />

                                <TextBlock
                                    Grid.Row="10"
                                    VerticalAlignment="Center"
                                    Text="Minimum Message Interval" />
                                <TextBox Grid.Row="10" Text="{Binding MinimumMessageInterval}" />

                                <TextBlock
                                    Grid.Row="11"
                                    VerticalAlignment="Center"
                                    Text="Default Edit Char Limit" />
                                <TextBox Grid.Row="11" Text="{Binding DefaultEditCharLimit}" />

                                <TextBlock
                                    Grid.Row="12"
                                    VerticalAlignment="Center"
                                    Text="No Menu Music" />
                                <CheckBox Grid.Row="12" IsChecked="{Binding NoMenuMusic}" />

                                <TextBlock
                                    Grid.Row="13"
                                    VerticalAlignment="Center"
                                    Text="Menu Music" />
                                <TextBox Grid.Row="13" Text="{Binding MenuMusic}" />

                                <TextBlock
                                    Grid.Row="14"
                                    VerticalAlignment="Center"
                                    Text="Help Type" />
                                <TextBox Grid.Row="14" Text="{Binding HelpType}" />

                                <TextBlock
                                    Grid.Row="15"
                                    VerticalAlignment="Center"
                                    Text="Play Movie" />
                                <CheckBox Grid.Row="15" IsChecked="{Binding PlayMovie}" />

                                <TextBlock
                                    Grid.Row="16"
                                    VerticalAlignment="Center"
                                    Text="Movie Volume 1" />
                                <TextBox Grid.Row="16" Text="{Binding MovieVolume1}" />

                                <TextBlock
                                    Grid.Row="17"
                                    VerticalAlignment="Center"
                                    Text="Play Second Movie" />
                                <CheckBox Grid.Row="17" IsChecked="{Binding PlaySecondMovie}" />

                                <TextBlock
                                    Grid.Row="18"
                                    VerticalAlignment="Center"
                                    Text="Movie Volume 2" />
                                <TextBox Grid.Row="18" Text="{Binding MovieVolume2}" />

                                <TextBlock
                                    Grid.Row="19"
                                    VerticalAlignment="Center"
                                    Text="Max Short Tooltip Width" />
                                <TextBox Grid.Row="19" Text="{Binding MaxShortTooltipWidth}" />

                                <TextBlock
                                    Grid.Row="20"
                                    VerticalAlignment="Center"
                                    Text="Max Long Tooltip Width" />
                                <TextBox Grid.Row="20" Text="{Binding MaxLongTooltipWidth}" />

                                <TextBlock
                                    Grid.Row="21"
                                    VerticalAlignment="Center"
                                    Text="Progress Left" />
                                <TextBox Grid.Row="21" Text="{Binding ProgressLeft}" />

                                <TextBlock
                                    Grid.Row="22"
                                    VerticalAlignment="Center"
                                    Text="Progress Top" />
                                <TextBox Grid.Row="22" Text="{Binding ProgressTop}" />

                                <TextBlock
                                    Grid.Row="23"
                                    VerticalAlignment="Center"
                                    Text="Progress Right" />
                                <TextBox Grid.Row="23" Text="{Binding ProgressRight}" />

                                <TextBlock
                                    Grid.Row="24"
                                    VerticalAlignment="Center"
                                    Text="Progress Bottom" />
                                <TextBox Grid.Row="24" Text="{Binding ProgressBottom}" />

                                <TextBlock
                                    Grid.Row="25"
                                    VerticalAlignment="Center"
                                    Text="Progress Red" />
                                <TextBox Grid.Row="25" Text="{Binding ProgressRed}" />

                                <TextBlock
                                    Grid.Row="26"
                                    VerticalAlignment="Center"
                                    Text="Progress Green" />
                                <TextBox Grid.Row="26" Text="{Binding ProgressGreen}" />

                                <TextBlock
                                    Grid.Row="27"
                                    VerticalAlignment="Center"
                                    Text="Progress Blue" />
                                <TextBox Grid.Row="27" Text="{Binding ProgressBlue}" />

                                <TextBlock
                                    Grid.Row="28"
                                    VerticalAlignment="Center"
                                    Text="Progress Shadow X Offset" />
                                <TextBox Grid.Row="28" Text="{Binding ProgressShadowXOffset}" />

                                <TextBlock
                                    Grid.Row="29"
                                    VerticalAlignment="Center"
                                    Text="Progress Shadow Y Offset" />
                                <TextBox Grid.Row="29" Text="{Binding ProgressShadowYOffset}" />

                                <TextBlock
                                    Grid.Row="30"
                                    VerticalAlignment="Center"
                                    Text="Progress Shadow Red" />
                                <TextBox Grid.Row="30" Text="{Binding ProgressShadowRed}" />

                                <TextBlock
                                    Grid.Row="31"
                                    VerticalAlignment="Center"
                                    Text="Progress Shadow Green" />
                                <TextBox Grid.Row="31" Text="{Binding ProgressShadowGreen}" />

                                <TextBlock
                                    Grid.Row="32"
                                    VerticalAlignment="Center"
                                    Text="Progress Shadow Blue" />
                                <TextBox Grid.Row="32" Text="{Binding ProgressShadowBlue}" />

                                <TextBlock
                                    Grid.Row="33"
                                    VerticalAlignment="Center"
                                    Text="Completed Exhibit Attenuation" />
                                <TextBox Grid.Row="33" Text="{Binding CompletedExhibitAttenuation}" />

                                <TextBlock
                                    Grid.Row="34"
                                    VerticalAlignment="Center"
                                    Text="MS Starting Cash" />
                                <TextBox Grid.Row="34" Text="{Binding MSStartingCash}" />

                                <TextBlock
                                    Grid.Row="35"
                                    VerticalAlignment="Center"
                                    Text="MS Cash Increment" />
                                <TextBox Grid.Row="35" Text="{Binding MSCashIncrement}" />

                                <TextBlock
                                    Grid.Row="36"
                                    VerticalAlignment="Center"
                                    Text="MS Min Cash" />
                                <TextBox Grid.Row="36" Text="{Binding MSMinCash}" />

                                <TextBlock
                                    Grid.Row="37"
                                    VerticalAlignment="Center"
                                    Text="MS Max Cash" />
                                <TextBox Grid.Row="37" Text="{Binding MSMaxCash}" />

                                <TextBlock
                                    Grid.Row="38"
                                    VerticalAlignment="Center"
                                    Text="Started First Tutorial" />
                                <CheckBox Grid.Row="38" IsChecked="{Binding StartedFirstTutorial}" />

                                <TextBlock
                                    Grid.Row="39"
                                    VerticalAlignment="Center"
                                    Text="Started Dino Tutorial" />
                                <CheckBox Grid.Row="39" IsChecked="{Binding StartedDinoTutorial}" />

                                <TextBlock
                                    Grid.Row="40"
                                    VerticalAlignment="Center"
                                    Text="Started Aqua Tutorial" />
                                <CheckBox Grid.Row="40" IsChecked="{Binding StartedAquaTutorial}" />

                                <TextBlock
                                    Grid.Row="41"
                                    VerticalAlignment="Center"
                                    Text="Last Window X" />
                                <TextBox Grid.Row="41" Text="{Binding LastWindowX}" />

                                <TextBlock
                                    Grid.Row="42"
                                    VerticalAlignment="Center"
                                    Text="Last Window Y" />
                                <TextBox Grid.Row="42" Text="{Binding LastWindowY}" />

                                <TextBlock
                                    Grid.Row="43"
                                    VerticalAlignment="Center"
                                    Text="Progress Calls" />
                                <TextBox Grid.Row="43" Text="{Binding ProgressCalls}" />
                            </Grid>
                        </Expander>
                    </StackPanel>
                </TabItem>


            </TabControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>